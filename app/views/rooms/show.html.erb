<table class="table table-hover">
  <tr>
    <th>Name</th>
    <th>House name</th>

  </tr>

  <%= render 'room', {:house => @house, :room => @room} %>


</table>

<%# Chartkick.options = {colors: ["pink", "#999"], legend: ['none'], axisFontSize: 0} %>

<%= javascript_include_tag '//www.google.com/jsapi', 'chartkick' %>
<% if @data.count > 0 %>
    <div class="col-sm-12">
      <h2> Temperature graph </h2>
      <%= column_chart(@data) %>
    </div>
    <div class="col-sm-8">
      <%= render 'controls' %>
    </div>
<% end %>


<% if @door_data.count > 0 %>
    <div class="col-sm-12">
      <h2> Door graph </h2>
      <%= column_chart(@door_data) %>
    </div>
    <div class="col-sm-8">
      <%= render 'controls' %>
    </div>
<% end %>





